<?xml version="1.0"?>

<robot xmlns:xacro="https://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find kobuki_description)/model/camera/kobuki_camera.gazebo.xacro"/>

    <xacro:macro name="kobuki_camera" params="parent *joint_origin">

        <joint name="camera_joint" type="fixed">
            <xacro:insert_block name="joint_origin"/>
            <parent link="${parent}"/>
            <child link="camera_link"/>
            <!-- <axis xyz="1 0 0"/> -->
        </joint>

        <link name="camera_link">
            <visual>
                <origin xyz="0 0 0" rpy="${PI/2} 0 ${PI/2}"/>
                <geometry>
                    <mesh filename="file://$(find kobuki_description)/meshes/stl/d415.stl" />
                    <!-- <box size="0.02 0.02 0.1"/> scale="0.1 0.001 0.001"-->
                </geometry>
            </visual>

            <collision>
                <geometry>
                    <box size="0.02 0.02 0.1"/>
                </geometry>
                <origin rpy="${PI/2} 0 0" xyz="0 0 0"/>
            </collision>

            <inertial>
                <origin xyz="0 0 0.0"/>
                <mass value="0.072"/>
                <inertia ixx="0.003881243" ixy="0" ixz="0" iyy="0.000498940" iyz="0" izz="0.003879257" />
            </inertial>
        </link>

    </xacro:macro>
</robot>